
@{
    ViewBag.Title = "لیست باشگاه ها";
}



<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="pull-right">

                <h3>لیست باشگاه ها</h3>
            </div>
            <div class="pull-left">
                <a class="btn btn-raised btn-primary" href="/gym/create">افزودن باشگاه جدید</a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>
                        ردیف
                    </th>
                    <th>
                        نام باشگاه
                    </th>
                    <th>
                        مدیریت
                    </th>
                    <th>
                        آدرس
                    </th>
                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>

                @if (Model != null)
                {
                    var counter = 1;
                    foreach (var item in Model)
                    {
                        <tr class="
                             @(item.Type == "1" ? "" : "")
                            @(item.Type == "2" ? "info" : "")
                            @(item.Type == "3" ? "success" : "")
                            ">
                            <td>@counter</td>
                            <td>@item.Name</td>
                            <td>@item.Manager</td>
                            <td>@item.Address</td>
                            <td><img style="width:150px;height:150px;" src="@item.CoverImage" /></td>
                            <td>
                                <a class="btn btn-raised btn-default" href="/Gym/ManageImages/@item.Id">مدیریت  تصاویر</a>
                                <a class="btn btn-raised btn-info" href="/Gym/Gym/@item.Id">مشاهده</a>
                                <a class="btn btn-raised btn-primary" href="/Gym/edit/@item.Id">ویرایش</a>
                                <a class="btn btn-raised btn-danger" href="/Gym/delete/@item.Id"><i class="fa fa-remove"></i>حذف</a>
                            </td>
                        </tr>
                        {
                            counter++;
                        }
                    }
                }

            </tbody>
        </table>
    </div>
    <div class="panel-footer">

        <span class="label label-info">باشگاه های یک ستاره</span>
        <span class="label label-success">باشگاه های سه ستاره ستاره</span>
    </div>
</div>

